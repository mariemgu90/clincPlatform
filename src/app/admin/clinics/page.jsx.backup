                        <p className="text-slate-900 font-bold">{selectedPatientForDetails.emergencyContact.phone}</p>
                      </div>
                    </div>
                  </div>
                </div>

                {/* Appointments */}
                <div className="mb-6">
                  <h3 className="text-xl font-bold text-slate-800 mb-4 flex items-center gap-2">
                    <span className="text-2xl">üìÖ</span>
                    Appointments
                  </h3>
                  <div className="grid grid-cols-2 gap-4">
                    <div className="bg-blue-50 rounded-xl p-5 border-2 border-blue-200">
                      <p className="text-sm text-blue-600 font-semibold mb-2">Last Visit</p>
                      <p className="text-lg font-bold text-slate-900">{selectedPatientForDetails.lastVisit}</p>
                    </div>
                    <div className="bg-green-50 rounded-xl p-5 border-2 border-green-200">
                      <p className="text-sm text-green-600 font-semibold mb-2">Next Appointment</p>
                      <p className="text-lg font-bold text-slate-900">{selectedPatientForDetails.nextAppointment}</p>
                    </div>
                  </div>
                </div>

                {/* Status Badge */}
                <div className="flex items-center justify-between pt-6 border-t-2 border-slate-200">
                  <div>
                    <span className={`inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-bold ${
                      selectedPatientForDetails.status === 'Active' 
                        ? 'bg-emerald-100 text-emerald-700 border-2 border-emerald-300' 
                        : 'bg-slate-100 text-slate-700 border-2 border-slate-300'
                    }`}>
                      <span className="w-2 h-2 rounded-full bg-current"></span>
                      {selectedPatientForDetails.status}
                    </span>
                  </div>
                  <button 
                    onClick={() => { setShowPatientDetailsModal(false); setSelectedPatientForDetails(null); }}
                    className="px-6 py-3 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-xl font-bold transition-all"
                  >
                    Close
                  </button>
                </div>
              </div>
            </div>
          )}
          </div>
        </div>
      </div>
    </div>
  );
}
