{
    "files.exclude": {
        "**/node_modules": true
    },
    // ESLint Configuration
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.run": "onType",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    // Show inline errors
    "problems.showInlineProblems": true
}